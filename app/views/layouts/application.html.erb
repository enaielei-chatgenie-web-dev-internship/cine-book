<!DOCTYPE html>
<html>
  <head>
    <title>CineBook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <%= javascript_include_tag("https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js", "data-turbo-track": "reload") %>
    <%= stylesheet_link_tag("https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.css", "data-turbo-track": "reload") %>
    <%= javascript_include_tag("https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.js") %>

    <%= stylesheet_link_tag("application", "data-turbo-track": "reload") %>
  </head>

  <body>
    <div id="main-content" class="ui piled text container segment">
        <%= render("partials/header") %>
        <div class="ui grid">
          <%= render("partials/navigation") %>
          <div class="ui twelve wide stretched column">
            <div id="right-content" class="ui segment">
              <%= yield %>
            </div>
          </div>
          <%= render("partials/footer") %>
        </div>
    </div>

    <%= javascript_include_tag("main") %>
  </body>
</html>
